@model List<MyApiProject.WebUI.Dtos.ResultCategoryDto>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .custom-table-container {
        margin-top: 60px;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
    }

    .custom-table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 24px rgba(0,0,0,0.07), 0 1.5px 4px rgba(0,0,0,0.06);
    }

        .custom-table th, .custom-table td {
            vertical-align: middle;
        }

    .action-btns a {
        margin-right: 8px;
    }

    .custom-table tbody tr:hover {
        background-color: #f8f9fa;
        transition: background 0.2s;
    }
</style>

<div class="container custom-table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">Category List</h2>
        <a href="/Categories/CategoryAdd" class="btn btn-success px-4">Add Category</a>
    </div>
    <table class="table table-bordered custom-table">
        <thead class="table-dark">
            <tr>
                <th style="width: 120px;">Category ID</th>
                <th>Category Name</th>
                <th style="width: 220px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.categoryId</td>
                        <td>@item.categoryName</td>
                        <td class="action-btns">
                            <a href="/Categories/CategoryUpdate/@item.categoryId" class="btn btn-primary btn-sm">Update</a>
                            <a href="/Categories/CategoryDelete/@item.categoryId" class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No categories found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>